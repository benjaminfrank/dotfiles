`(let ((header (unless scala-header-skip
                (format
                 "// Copyright: %s %s\n// License: %s\n"
                 (format-time-string "%Y")
                 yatemplate-owner
                 yatemplate-license)))
      (package (let ((package (mvn-package-for-buffer)))
                 (when package
                   (format "package %s\n\n" package)))))
  (concat header package))`$0
